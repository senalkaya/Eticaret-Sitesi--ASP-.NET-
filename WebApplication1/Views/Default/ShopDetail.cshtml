@using WebApplication1.Entity
@model Product 


@{
    ViewBag.Title = "ShopDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Shop Detail Start -->
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 mb-30">
            <div id="product-carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner bg-light">
                    <div class="carousel-item active">

                        <img class="w-100 h-100" src="~/Content/img/@Model.Image" alt="Image">


                    </div>

                </div>

            </div>
        </div>

        <div class="col-lg-7 h-auto mb-30">
            <div class="h-100 bg-light p-30">
                <h3>@Model.ProductName</h3>
                <div class="d-flex mb-3">
                    <div class="text-primary mr-2">
                        <small class="fas fa-star"></small>
                        <small class="fas fa-star"></small>
                        <small class="fas fa-star"></small>
                        <small class="fas fa-star-half-alt"></small>
                        <small class="far fa-star"></small>
                    </div>
                    <small class="pt-1">(99 Reviews)</small>
                </div>
                <h3 class="font-weight-semi-bold mb-4">@Model.Price $</h3>
                <p class="mb-4">
                    @Model.Description
                </p>

                @using (Html.BeginForm("AddToCart", "Cart", new { @class = "d-flex align-items-center mb-4 pt-2" }))
                {

                    @Html.HiddenFor(i => i.id)

                    <button class="btn btn-primary px-3">
                        <i class="fa fa-shopping-cart mr-1"></i> Sepete Ekle
                    </button>

                }

                <div class="d-flex pt-2">
                    <strong class="text-dark mr-2">Share on:</strong>
                    <div class="d-inline-flex">
                        <a class="text-dark px-2" href="">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a class="text-dark px-2" href="">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a class="text-dark px-2" href="">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a class="text-dark px-2" href="">
                            <i class="fab fa-pinterest"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Ürün Açıklaması</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Ürün Bilgileri</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Yorumlar</a>
                </div>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tab-pane-1">
                        <h4 class="mb-3">Ürün Açıklaması</h4>
                        <p>@Model.Description</p>

                    </div>
                    <div class="tab-pane fade" id="tab-pane-2">
                        <h4 class="mb-3">Ürün Bilgileri</h4>
                        <p> <h4>Stokta bulunan ürün adedi:@Model.Stock</h4></p>

                    </div>

                    <div class="tab-pane fade" id="tab-pane-3">
                        <div class="row">
                            <div class="col-md-6">
                                <h4 class="mb-4">@Model.ProductName ürünü yorumları</h4>
                                <div class="media mb-4">
                                    <img src="~/sablon/img/yorum.png" alt="Image" class="~/Content/img-fluid mr-3 mt-1" style="width: 45px;">
                                    <div class="media-body">
                                        <h6>John Doe<small> - <i>01 Jan 2045</i></small></h6>

                                      
                                          <p>@Model.Slider</p>
                                       
                                        
                                    </div>
                                </div>
                            </div>


                            @if (Request.IsAuthenticated)
                            {
                                <div class="col-md-6">
                                    <h4 class="mb-4">@Model.ProductName ürünü için yorum oluştur</h4>


                                    <form asp-action="VeriAl" asp-controller="Default" method="post">
                                        <div class="form-group">
                                            <label for="message">Yorumunuz*</label>
                                            <textarea id="message" name="txtVal1" cols="30" rows="5" class="form-control"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label for="name">Adınız *</label>
                                            <input type="text" name="txtVal2" class="form-control" id="name">
                                        </div>
                                        <div class="form-group">
                                            <label for="email">Email adresiniz *</label>
                                            <input type="email" name="txtVal3" class="form-control" id="email">
                                        </div>


                                        <div class="form-group mb-0">
                                            <input type="submit" value="Oluştur" class="btn btn-primary px-3">
                                        </div>


                                    </form>
                                </div>
                            }






                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<!-- Shop Detail End -->
<!-- Products Start -->

<!-- Products End -->
