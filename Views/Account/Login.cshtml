@model WebApplication1.Models.Login
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="sarmal" align="center">

    <div class="span9">
        <ul class="breadcrumb">
            <li><a href="/Default/Index">Anasayfa</a> <span class="divider">/</span></li>
            <li class="active">Giriş</li>
        </ul>


        <div class="well">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <h3>Giriş</h3>

           


         


                <div class="control-group">
                    <label class="control-label" for="inputFname">Kullanıcı Adı</label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
 



                <div class="control-group">
                    <label class="control-label" for="inputFname">Parola</label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


                <br />

                <div class="control-group">
                    <div class="controls">
                        <input type="submit" name="submitAccount" value="Giriş Yap" class="btn btn-success">
                    </div>
                </div>

            }

        </div>




    </div>
</div>